/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.authorize::after{
  border: none
}
.authorize{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  bottom: 0rpx;
  right: 0rpx;
  z-index: 99;
  opacity:0
}

.zhanweifu-box{
  width: 330rpx;
  height: 230rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -165rpx;
  margin-top: -140rpx;
}
.zhanweifu-img{
  width: 330rpx;
  height: 196rpx;
  
}
.zhanweifu-img > image{
  width: 100%;
  height: 100%;
}
.zhanweifu-text{
  font-size: 30rpx;
  color: #4A4A4A;
  width: 100%;
  text-align: center;
  margin: auto
}