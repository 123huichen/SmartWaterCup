<!--pages/dataCard/dataCard.wxml-->
<view class='main'>
  <view class='card-box'>
    <view class='card-avatar'><image src='{{avatar}}'></image></view>
    <view class='card-top'>
      <input class='card-input' type='text' placeholder='性别' bindinput='gender'></input>
      <input class='card-input' type='text' placeholder='年龄' bindinput='age'></input>
      <input class='card-input' type='text' placeholder='身高' bindinput='height'></input>
      <input class='card-input' type='text' placeholder='体重' bindinput='body_weight'></input>
      <input class='card-input' type='text' placeholder='手机' bindinput='Mobile_phone'></input>
      <view class='card-input-code'>
        <input class='card-input card-input-post' type='text' placeholder='验证码' bindinput='Verification_code' value='{{ver_code}}'></input>
        <view class='card-code' bindtap='Card_Code'>获取验证码</view>
      </view>
      
    </view>
    
  </view>
  <view class='card-but' bindtap='formReset'>确认</view>
</view> 
