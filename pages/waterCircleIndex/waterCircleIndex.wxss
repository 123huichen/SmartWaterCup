/* pages/waterCircleIndex/waterCircleIndex.wxss */
.main{
  padding: 0rpx 44rpx;
}
.main-float{
  position: fixed;
  top: 0;
  background: #fff;
  z-index: 10;
  left:0;
  right:0;
}
.water-friend{
  width: 626rpx;
  height: 88rpx;
  font-size: 32rpx;
  color: #4A4A4A;
  margin-top: 20rpx;
  background: #fff;
  line-height: 88rpx;
  padding: 0rpx 16rpx 0rpx 18rpx;
  margin: auto;
  border-radius: 6rpx;

}
.water-friend-bg{
  width: 100%;
  height: 132rpx;
  background: #F6F7F9;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.friend-num{
  background: #62BDFF;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  float: right;
  color: #FFFFFF;
  font-size: 32rpx;
  text-align: center;
  line-height: 40rpx;
  margin-top: 22rpx;
}
.back-view{
  position: absolute;
  width: 626rpx;
  height: 50rpx;
  top: 50rpx;
  left: 50%;
  margin-left: -318rpx;
  z-index: -1;
  box-shadow: 0rpx 1rpx 40rpx #B9B9B9;
}
.personal-box{
  margin-top: 24rpx;
  height: 176rpx;
  width: 662rpx;
  background: #63BDFF;
  border-radius: 12rpx;
  display: flex;
  margin: auto;
  margin-top: 24rpx;
}
.infor-flex{
  flex: 1;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
}
.infor-flex-text{
  color: rgba(255, 255, 255, 0.8);
  font-size: 30rpx;
  margin-top: 44rpx;
}
.avatar{
  width: 88rpx;
  height: 88rpx;
  background: #fff;
  border-radius: 44rpx;
  margin: auto;
  margin-top: 30rpx;
  overflow: hidden
}
.avatar > image{
  width: 100%;
  height: 100%
}
.avatar-name{
  font-size: 32rpx;
}
.friend-list{
  margin-top: 150rpx
}
.friend-li{
  height: 134rpx;
  display: flex;
  align-items: center;
}
.ranking-num{
  width: 56rpx;
  height: 74rpx;
  text-align: center;
  font-size: 56rpx;
  color: #FC6F6F
}
.ranking-num > image {
  width: 100%;
  height: 100%;
}
.friend-li-avatar{
  width: 88rpx;
  height: 88rpx;
  background: #62BDFF;
  border-radius: 44rpx;
  margin-left: 18rpx;
  overflow: hidden
}
.friend-li-avatar > image {
  width: 100%;
  height: 100%;
}
.friend-li-name{
  color: #4A4A4A;
  font-size: 30rpx;
  margin-left: 10rpx;
}
.friend-li-carry{
  color: #FC6F6F;
  font-size: 44rpx;
  position:absolute;
  right: 200rpx
}
.form-submit{
  position: absolute;
  width: 120rpx;
  height: 48rpx;
  right: 5rpx;
}
.friend-li-but::after{
  border: none
}
.friend-li-but{
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
  background: #63BDFF;
  border-radius: 24rpx;
  text-align: center;
  position: absolute;
  right: 5rpx;
  font-size: 28rpx;
  color: #fff;
  box-shadow: 0rpx 2rpx 10rpx #63BDFF;
}