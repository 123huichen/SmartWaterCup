<!--pages/forgetPassword/forgetPassword.wxml-->
<view class='main'>
  <view class='bluetooth-input-box'>
    <input class='bluetooth-input' type='text' placeholder='请输入水杯设备号' bindinput='input_DeviceNo'></input>
    <input class='bluetooth-input' type='text' placeholder='请输入电话号码' bindinput="Mobile_phone"></input>
    <view class='for-pass-input-code'>
      <input class='for-pass-input' type='text' placeholder='验证码' bindinput='Verification_code' value='{{ver_code}}'></input>
      <view class='for-pass-code' bindtap='Card_Code'>获取验证码</view>
    </view>
  </view>
  <view class='map-but' bindtap='requestFun'>确认</view>
</view>
