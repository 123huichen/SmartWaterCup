/* pages/addWaterFriend/addWaterFriend.wxss */
.friend-list{
  padding: 0rpx 44rpx;
}
.friend-li{
  display: flex;
  height: 132rpx;
  align-items: center;
}
.friend-li-avatar{
  width: 88rpx;
  height: 88rpx;
  background: #ccc;
  border-radius: 44rpx;
  margin-right: 10rpx;
  overflow: hidden
}
.friend-li-avatar > image{
  width: 100%;
  height: 100%
}
.friend-name{
  color: #4A4A4A;
  font-size: 30rpx
}
.friend-add-but{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  border-radius: 24rpx;
  background: #63BDFF;
  box-shadow:0px 4px 4px rgba(99,189,255,0.42);
  right: 44rpx;
  color: #fff;
  text-align: center;
  line-height:48rpx;
}