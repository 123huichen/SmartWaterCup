/* pages/waterFriend/waterFriend.wxss */
.main{
  
}
.search-top{
  height: 130rpx;
  border-bottom: 8rpx solid rgba(246,247,249,1);
  padding: 0rpx 44rpx;
}
.search-box{
  display: flex;
  padding-top:20rpx;
}
.search-input{
  width: 496rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #4A4A4A;
  border-radius: 38rpx;
  background: #F6F7F9;
  padding-left: 20rpx;
}
.search-but::after{
  border: none;
}
.search-but{
  width: 120rpx;
  height: 55rpx;
  text-align: center;
  line-height: 55rpx;
  background:#63BDFF;
  border-radius:24rpx;
  box-shadow:0rpx 2rpx 10rpx #63BDFF;
  font-size: 28rpx;
  color: #fff;
  margin-left: 26rpx;
}
.data-list{
  
}
.wx-add{
  display: flex;
  height: 60rpx;
  margin-top: 44rpx;
}
.wx-avatar{
  width: 52rpx;
  height: 44rpx;
  padding: 8rpx 4rpx;
  background: #63BDFF;
  border-radius: 4rpx
}
.wx-avatar > image {
  width: 100%;
  height: 100%;
}
.wx-add-text{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #4A4A4A;
  margin-left: 16rpx;
}
.wx-add-icon{
  width:14rpx;
  height:18rpx;
  position:absolute;
  right:44rpx;
}
.wx-add-icon > image {
  width: 100%;
  height: 100%;
}
.friend-list{
  margin-top: 60rpx;
  padding: 0rpx 44rpx;
}
.friend-title{
  color: #9B9B9B;
  font-size: 28rpx;
}
.friend-li{
  display: flex;
  height: 132rpx;
  align-items: center;
}
.friend-li-avatar{
  width: 88rpx;
  height: 88rpx;
  background: #ccc;
  border-radius: 44rpx;
  margin-right: 10rpx;
  
}
.friend-li-avatar > image{
  width: 100%;
  height: 100%
}
.friend-name{
  color: #4A4A4A;
  font-size: 30rpx
}